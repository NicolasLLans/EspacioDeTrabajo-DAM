<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".conectar_DB">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circular_shape"
        android:src="@drawable/musculo"
        android:scaleType="centerCrop"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar Base de datos"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/edit_server_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servidor"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/edit_server"
        android:layout_width="343dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@android:color/white"
        android:hint="Localhost"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_server_label" />

    <TextView
        android:id="@+id/edit_port_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puerto"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/edit_server"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/edit_port"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@android:color/white"
        android:hint="3306"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingVertical="8dp"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_port_label"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/edit_database_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Base de datos"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/edit_port"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/edit_database"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Centrodeportivo"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/edit_database_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:id="@+id/edit_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/edit_database"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Admin"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:minHeight="48dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_username_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"/>

    <TextView
        android:id="@+id/edit_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/edit_username"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="********"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_password_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"/>

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:backgroundTint="#6200EA"
        android:textColor="@android:color/white"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/edit_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
